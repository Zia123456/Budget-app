<h1>Transactions</h1>
<div class="transaction-container">
    <% @entities.each do |entity| %>
        <div class="category">
          <div class="details">
            <h3><%= entity.name %></h3>
            <h4>$ <%= entity.amount %></h4>
          </div>
          <p><%= entity.created_at.strftime('%b %d, %Y') %></p>
        </div>
    <% end %>
    <br>
    <%= link_to "New Transaction", new_group_entity_path %>
    <br>
    <%= link_to 'Back', groups_path, class:"back" %>
</div>
